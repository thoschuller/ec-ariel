{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run script with: uv run",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
                "presentation": {
                    "reveal": "always",
                    "panel": "new"
                }
            },
        },
        {
            "label": "Run nox: docs",
            "type": "shell",
            "command": "nox",
            "args": [
                "--session=docs",
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
                "presentation": {
                    "reveal": "always",
                    "panel": "new"
                }
            },
        },
    ],
}